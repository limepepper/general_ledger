<table id="generic-list-table" class="table table-striped table-hover" style="width:100%">
  <thead>
    <tr>
      {% for field in list_display %}
      <th scope="col">{{ field }}</th>
      {% endfor %}
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for object in object_list %}
    <tr>

      {% for field in list_display %}
      {% if loop.first %}
      <th scope="row">
        {% if object.get_absolute_url is defined %}
        <a href="{{ object.get_absolute_url() }}">
          {% endif %}
          {{ object[field]|safe }}
          {% if object.get_absolute_url is defined %}
        </a>
        {% endif %}
      </th>

      {% else %}
      {% if cancall(object|attr(field)) %}
      <td>{{ object|attr(field)() }}</td>
      {% else %}
      <td>{{ object|attr(field)|gen_field }}</td>
      {% endif %}
      {% endif %}
      {% endfor %}
      <td>
        <a href="{{ object.get_absolute_url() }}">View</a>
        {% if object.get_edit_url is defined %}
        <a href="{{ object.get_edit_url() }}">Edit</a>
        {# <a href="{{ object.get_delete_url() }}">Delete</a> #}
        {% endif %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
  <tfoot>
    <tr>
      {% for field in list_display %}
      <th scope="col">{{ field }}</th>
      {% endfor %}
      <th scope="col">Actions</th>
    </tr>
  </tfoot>
</table>